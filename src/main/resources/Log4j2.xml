<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="DEBUG" monitorInterval="30">
    <Properties>
        <Property name="data-path">data</Property>
        <Property name="proyect">Restfull</Property>
        <Property name="log-path">log</Property>
    </Properties>
    <Appenders>
        <Console name="CONSOLE" target="SYSTEM_OUT">
            <PatternLayout
                    pattern="%d %-5p [%t] %C{2} (%F:%L) [%X{uniqueID}] - %m%n" />
        </Console>
        <RollingFile name="ROLLING"
                     fileName="/${data-path}/${proyect}/${log-path}/${proyect}.log"
                     filePattern="/${data-path}/${proyect}/${log-path}/${proyect}-%i.log">
            <PatternLayout
                    pattern="%d %-5p [%t] %C{2} (%F:%L) - %m%n" />
            <Policies>
                <SizeBasedTriggeringPolicy size="10 MB" />
            </Policies>
            <DefaultRolloverStrategy max="10" />
        </RollingFile>
        <Async name="AsyncRollingFile" includeLocation="false"
               bufferSize="20">
            <AppenderRef ref="ROLLING" />
            <AppenderRef ref="CONSOLE" />
        </Async>
    </Appenders>
    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="AsyncRollingFile" />
        </Root>
        <AsyncLogger name="pe.creativity" level="DEBUG"
                     additivity="false" includeLocation="false">
            <AppenderRef ref="AsyncRollingFile" level="debug" />
        </AsyncLogger>
        <AsyncLogger name="com.zaxxer.hikari" level="DEBUG"
                     additivity="false" includeLocation="false">
            <AppenderRef ref="AsyncRollingFile" level="debug" />
        </AsyncLogger>
    </Loggers>
</Configuration>